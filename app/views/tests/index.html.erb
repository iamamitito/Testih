
<h1>Mis tests</h1>
<table class="table"> 
  <thead>
    <tr>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.date.to_time.strftime('%Y, %B %e') %></td>
        <td><%= link_to 'Editar', edit_test_path(test), class:"btn btn-sm" %></td>
        <td><%= link_to 'Eliminar', test, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to '| New Test |', new_test_path, class:"btn btn-white" %> <br><br>
<p><%= link_to '| Home |', root_path, class:"btn btn-white" %> </p>

